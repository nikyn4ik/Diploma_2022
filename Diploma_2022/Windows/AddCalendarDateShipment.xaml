<Window x:Class="Diploma_2022.Windows.AddCalendarDateShipment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diploma_2022.Windows"
        Title="Severstal Infocom"
        Width="230"
        Height="200"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Window.Background>

        <ImageBrush ImageSource="\Images\Sevrstal554840.jpg" />

    </Window.Background>
    <Grid>
        <Calendar
            HorizontalAlignment="CenterScreen"
            VerticalAlignment="Top"
            SelectedDatesChanged="Calendar_SelectedDatesChanged" FontFamily="Microsoft JhengHei UI Light" FontSize="14" Height="196" Width="230"/>
    </Grid>
</Window>
