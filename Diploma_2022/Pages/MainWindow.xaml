<Window
    x:Class="Diploma_2022.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Diploma_2022"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Severstal Infocom"
    Width="1200"
    Height="710"
    Foreground="#FFFFFF"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Window.Background>

        <ImageBrush ImageSource="C:\Users\nikab\source\repos\Diploma_2022\Diploma_2022\Images\newbrand-bg2.jpg" />

    </Window.Background>
    <Grid Height="684" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="684" />
            </Grid.RowDefinitions>
            <StackPanel
                Margin="0,0,950,-10"
                Background="#002F6C"
                Orientation="Vertical"
                RenderTransformOrigin="0.503,0.539">
                <TextBlock
                    Height="33"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Stretch"
                    FontFamily="Times New Roman"
                    FontSize="30"
                    Foreground="#FFFFFF"
                    RenderTransformOrigin="0,0.5"
                    Text="Меню"
                    TextAlignment="Center"
                    TextWrapping="NoWrap" />

                <Button
                    Height="33"
                    Margin="0,2,0,2"
                    AllowDrop="True"
                    Background="#FFFFFF  "
                    Click="Button_order"
                    Content="Заказы"
                    FontFamily="Times New Roman"
                    FontSize="16"
                    Foreground="#002F6C" />

                <Button
                    Height="33"
                    Margin="0,0,0,2"
                    AllowDrop="True"
                    Background="#FF0000 "
                    Click="Button_Shipment"
                    Content="Отгрузка и доставка"
                    FontFamily="Times New Roman"
                    FontSize="16"
                    Foreground="#FFFFFF " />



                <Button
                    Height="33"
                    Margin="0,0,0,2"
                    AllowDrop="True"
                    Background="#FFFFFF  "
                    Click="Button_Storage"
                    Content="Склады"
                    FontFamily="Times New Roman"
                    FontSize="16"
                    Foreground="#002F6C" />

                <Button
                    Height="33"
                    Margin="0,0,0,1"
                    AllowDrop="True"
                    Background="#FF0000 "
                    Click="Button_Certificates"
                    Content="Документация"
                    FontFamily="Times New Roman"
                    FontSize="16"
                    Foreground="#FFFFFF " />
                <Button
                    Height="33"
                    AllowDrop="True"
                    Background="#FFFFFF  "
                    Click="Button_RabMestoMastera"
                    Content="Рабочее место мастера (QR) "
                    FontFamily="Times New Roman"
                    FontSize="16"
                    Foreground="#002F6C" />


            </StackPanel>



            <Grid
                Width="1198"
                Margin="0,0,0,-10"
                HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="0*" />
                </Grid.ColumnDefinitions>
                <Image
                    Width="645"
                    Height="342"
                    Margin="0,88,331,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Source="C:\Users\nikab\source\repos\Diploma_2022\Diploma_2022\Images\Severstal_Logo_LAT_White_RGB.png"
                    Stretch="Uniform"
                    StretchDirection="Both"
                    Visibility="Visible" />
                <Button
                    Margin="0,638,950,30"
                    VerticalContentAlignment="Center"
                    Background="#F4F4F4"
                    BorderBrush="White"
                    BorderThickness="1,1,1,1"
                    Click="Button_ClickOut"
                    ForceCursor="True"
                    Foreground="#FFB85F5F"
                    IsTabStop="False">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10" />
                        </Style>
                    </Button.Resources>
                    <TextBlock Foreground="#FF002F6C"><Run Text="Выход" /></TextBlock>
                </Button>
                <TextBlock
                    x:Name="lplogin"
                    Height="26"
                    Margin="158,0,950,76"
                    VerticalAlignment="Bottom"
                    Background="#FFFFFF"
                    FontSize="18"
                    FontWeight="Normal"
                    Foreground="#FF0000"
                    TextAlignment="Left" />

                <Label
                    Width="158"
                    Height="26"
                    Margin="0,592,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Top"
                    Background="#FF0000"
                    BorderThickness="0,0,0,0"
                    Content="Активный пользователь:"
                    FontWeight="Normal"
                    Foreground="#FFFFFF" />
            </Grid>
        </Grid>
    </Grid>
</Window>
