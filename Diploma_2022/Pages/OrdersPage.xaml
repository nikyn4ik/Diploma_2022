<Window
    x:Class="Diploma_2022.Pages.OrdersPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Diploma_2022.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Severstal Infocom"
    Width="1200"
    Height="700"
    mc:Ignorable="d">
    <Window.Background>

        <ImageBrush ImageSource="C:\Users\Sputnik\source\repos\Diploma_2022\Diploma_2022\Images\ugs.jpg" />

    </Window.Background>


    <Grid>
        <Border
            Width="661"
            Height="53"
            Margin="0,0,258,613"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Background="#002F6C"
            BorderThickness="0,0,0,0"
            CornerRadius="10">
            <StackPanel
                Width="142"
                Height="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <TextBlock
                    Width="90"
                    Height="32"
                    Margin="4,4,0,0"
                    HorizontalAlignment="Center"
                    FontFamily="Microsoft JhengHei UI Light"
                    FontSize="26"
                    Foreground="#FFFFFF"
                    RenderTransformOrigin="0.588,0.494"
                    Text="Orders" />

            </StackPanel>
        </Border>


        <DataGrid
            Name="OrdersGrid"
            Height="531"
            Margin="0,79,0,0"
            VerticalAlignment="Top"
            AutoGenerateColumns="False"
            Background="Snow"
            SelectionChanged="OrdersGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="3*"
                    Binding="{Binding id_type_product}"
                    Header="Id продукта" />
                <DataGridTextColumn
                    Width="3*"
                    Binding="{Binding consignee}"
                    Header="Грузополучатель" />
                <DataGridTextColumn
                    Width="3*"
                    Binding="{Binding order_status}"
                    Header="Статус заказа " />
                <DataGridTextColumn
                    Width="3*"
                    Binding="{Binding date_of_change}"
                    Header="Дата изменения" />
                <DataGridTextColumn
                    Width="3*"
                    Binding="{Binding order_type}"
                    Header="Тип заказа" />
                <DataGridTextColumn
                    Width="4*"
                    Binding="{Binding tolerance_standart}"
                    Header="Стандарт на допуски" />
                <DataGridTextColumn
                    Width="4*"
                    Binding="{Binding product_standard}"
                    Header="Стандарт на продукцию" />
                <DataGridTextColumn
                    Width="2*"
                    Binding="{Binding remainder}"
                    Header="Остаток" />
                <DataGridTextColumn
                    Width="4*"
                    Binding="{Binding order_status_indicator}"
                    Header="Индикатор статуса заказа" />
            </DataGrid.Columns>
        </DataGrid>
        <Button
            x:Name="deleteButton"
            Margin="712,615,281,19"
            Background="#002F6C"
            Click="deleteButton_Click"
            Content="Delete"
            Foreground="#FFFFFF" />
        <Button
            x:Name="addButton"
            Margin="281,615,712,19"
            Background="#002F6C"
            Click="AddButton_Click"
            Content="Add"
            Foreground="#FFFFFF" />

    </Grid>
</Window>