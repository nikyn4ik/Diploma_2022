<Window
    x:Class="Diploma_2022.Pages.StoragePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Diploma_2022.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Severstal Infocom"
    Width="1200"
    Height="700"
    mc:Ignorable="d">

    <Window.Background>

        <ImageBrush ImageSource="C:\Users\Sputnik\source\repos\Diploma_2022\Diploma_2022\Images\ugs.jpg" />

    </Window.Background>

    <Grid>
        <Border
            Width="661"
            Height="61"
            Margin="0,0,258,613"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Background="#002F6C"
            BorderThickness="0,0,0,0"
            CornerRadius="10">
            <StackPanel
                Width="163"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

                <TextBlock
                    Width="93"
                    Height="38"
                    HorizontalAlignment="Center"
                    FontFamily="Microsoft JhengHei UI Light"
                    FontSize="26"
                    Foreground="#FFFFFF"
                    RenderTransformOrigin="0.5,0.5"
                    Text="Storage">
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform AngleY="-0.201" />
                            <RotateTransform />
                            <TranslateTransform Y="0.163" />
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>

            </StackPanel>
        </Border>


        <DataGrid
            Name="StorageGrid"
            Margin="12,80,12,79"
            AutoGenerateColumns="False"
            Background="Snow"
            SelectionChanged="StorageGrid_SelectionChanged">

            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="4*"
                    Binding="{Binding id_storage}"
                    Header="ID склад" />

                <DataGridTextColumn
                    Width="4*"
                    Binding="{Binding name_storage}"
                    Header="Имя" />

                <DataGridTextColumn
                    Width="4*"
                    Binding="{Binding address}"
                    Header="Адрес" />

                <DataGridTextColumn
                    Width="4*"
                    Binding="{Binding remainder}"
                    Header="Остаток" />
            </DataGrid.Columns>

        </DataGrid>

        <Button
            Height="53"
            Margin="1082,18,26,0"
            VerticalAlignment="Top"
            Background="#002F6C"
            Click="Button_Back"
            Content="Back"
            FontFamily="Microsoft JhengHei UI Light"
            Foreground="#FFFFFF">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10" />
                </Style>
            </Button.Resources>
        </Button>
        <Button
            x:Name="delete"
            Margin="712,615,281,19"
            Background="#002F6C"
            Click="deleteButton"
            Content="Delete"
            Foreground="#FFFFFF" />

        <Button
            x:Name="add"
            Margin="281,615,711,19"
            Background="#002F6C"
            Click="AddButton"
            Content="Add"
            Foreground="#FFFFFF" />
    </Grid>
</Window>
