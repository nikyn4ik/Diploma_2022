<Window
    x:Class="Diploma_2022.Pages.Certificates"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Diploma_2022.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Severstal Infocom"
    Width="1200"
    Height="700"
    mc:Ignorable="d">
    <Window.Background>

        <ImageBrush ImageSource="C:\Users\Sputnik\source\repos\Diploma_2022\Diploma_2022\Images\ugs.jpg" />

    </Window.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="13*" />
            <RowDefinition Height="88*" />
            <RowDefinition Height="13*" />
        </Grid.RowDefinitions>
        <Border
            Background="#002F6C"
            BorderThickness="0,0,0,0"
            CornerRadius="10" HorizontalAlignment="Center" Width="680" Height="55" VerticalAlignment="Top">
            <StackPanel Margin="174,7,174,6">
                <TextBlock
                    Width="208"
                    Height="36"
                    FontFamily="Microsoft JhengHei UI Light"
                    FontSize="26"
                    Foreground="#FFFFFF"
                    RenderTransformOrigin="0.588,0.494"
                    Text="Сертификаты" TextAlignment="Center" TextWrapping="NoWrap" />

            </StackPanel>
        </Border>


        <DataGrid
            Name="CertificatesGrid"
            Grid.Row="1"
            Height="525"
            VerticalAlignment="Top"
            AutoGenerateColumns="False"
            Background="Snow" Margin="0,3,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding id_qua_certificate}"
                    Header="Id сертификата" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding standard_per_mark}"
                    Header="Стандарт на марку" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding tolerance_standart}"
                    Header="Стандарт на допуск " />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding product_standard}"
                    Header="Стандарт на продукцию" />
            </DataGrid.Columns>
        </DataGrid>
        <Button
            x:Name="deleteButton"
            Grid.Row="2"
            Width="207"
            Height="50"
            Margin="712,9,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#002F6C"
            Click="deleteButton_Click"
            Content="Удаление сертификата"
            Foreground="#FFFFFF" />
        <Button
            x:Name="update"
            Grid.Row="2"
            Width="208"
            Height="49"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="#002F6C"
            Click="UpdButton"
            Content="Обновление таблицы"
            Foreground="#FFFFFF" />

        <Button
            x:Name="addButton"
            Grid.Row="2"
            Width="207"
            Height="50"
            Margin="0,9,712,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Background="#002F6C"
            Click="AddButton_Click"
            Content="Добавление Сертификата"
            Foreground="#FFFFFF" />

        <TextBox
            x:Name="pole"
            Width="98"
            Height="32"
            Margin="983,12,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextChanged="polee_TextChanged"
            TextWrapping="Wrap" />
        <Button
            Width="86"
            Height="32"
            Margin="1099,12,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#002F6C"
            Click="Button_Click_search"
            Content="Поиск"
            Foreground="#FFFFFF" />
    </Grid>
</Window>