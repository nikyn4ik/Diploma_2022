<Window
    x:Class="Diploma_2022.Pages.ShipmentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Diploma_2022.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Severstal Infocom"
    Width="1200"
    Height="700"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Background>

        <ImageBrush ImageSource="\Images\ugs.jpg" />

    </Window.Background>

    <Grid Height="684" VerticalAlignment="Bottom">

        <Grid.Style>
            <Style />
        </Grid.Style>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="551*" />
            <ColumnDefinition Width="109*" />
            <ColumnDefinition Width="540*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="91*" />
            <RowDefinition Height="519*" />
            <RowDefinition Height="75*" />
        </Grid.RowDefinitions>
        <Border
            Grid.ColumnSpan="3"
            Width="680"
            Margin="260,5,0,22"
            HorizontalAlignment="Left"
            Background="#002F6C"
            BorderThickness="0,0,0,0"
            CornerRadius="10">
            <StackPanel
                Width="392"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

                <TextBlock
                    Width="326"
                    Margin="0,0,-11,0"
                    HorizontalAlignment="Center"
                    FontFamily="Microsoft JhengHei UI Light"
                    FontSize="28"
                    Foreground="White"
                    Text="Отгрузка"
                    TextAlignment="Center" />

            </StackPanel>
        </Border>


        <DataGrid
            Name="ShipmentGrid"
            Grid.Row="1"
            Grid.ColumnSpan="3"
            Height="500"
            Margin="10,0,10,0"
            VerticalAlignment="Center"
            AutoGenerateColumns="False"
            Background="Snow"
            BorderBrush="#FF7C79BB"
            IsReadOnly="True"
            SelectionChanged="ShipmentGrid_SelectionChanged">

            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="4*"
                    Binding="{Binding id_shipment}"
                    Header="id отгрузки" />
                <DataGridTextColumn
                    Width="4*"
                    Binding="{Binding consignee}"
                    Header="Груз" />
                <DataGridTextColumn
                    Width="4*"
                    Binding="{Binding date_of_shipments}"
                    Header="Дата отгрузки" />
                <DataGridTextColumn
                    Width="4*"
                    Binding="{Binding shipment_total_amount_tons}"
                    Header="Отгр.кол-во всего [тонны]" />
                <DataGridTextColumn
                    Width="4*"
                    Binding="{Binding number_of_shipments_per_month_tons}"
                    Header="Отгр. кол-во за месяц [тонны]" />
                <DataGridTextColumn
                    Width="4*"
                    Binding="{Binding early_shipment}"
                    Header="Ранняя отгрузка" />
                <DataGridTextColumn
                    Width="4*"
                    Binding="{Binding product_standard}"
                    Header="Сертификат" />
            </DataGrid.Columns>
        </DataGrid>

        <Button
            x:Name="dateship"
            Grid.Row="2"
            Grid.Column="2"
            Width="240"
            Height="48"
            Margin="0,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#002F6C"
            Click="dateships"
            Content="Указать дату отгрузки"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="14"
            Foreground="#FFFFFF" />
        <Button
            x:Name="go_to_dostav_Button"
            Grid.Row="2"
            Width="240"
            Height="48"
            Margin="301,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#002F6C"
            Click="go_to_dostav_Click"
            Content="Отправить из отгрузки в доставку"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="14"
            Foreground="#FFFFFF" />
        <Button
            x:Name="brakButton"
            Grid.Row="2"
            Grid.Column="2"
            Height="48"
            Margin="290,10,10,0"
            VerticalAlignment="Top"
            Background="#002F6C"
            Click="brakButton_Click"
            Content="Отправить заказ в брак"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="14"
            Foreground="#FFFFFF" />
        <TextBox
            x:Name="pole"
            Grid.Column="2"
            Width="120"
            Height="32"
            Margin="299,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            TextChanged="polee_TextChanged"
            TextWrapping="Wrap" />
        <Button
            Grid.Column="2"
            Width="100"
            Height="32"
            Margin="430,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Background="#002F6C"
            Click="Button_Click_search"
            Content="Поиск"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="14"
            Foreground="#FFFFFF" />
        <Button
            x:Name="certButton"
            Grid.Row="2"
            Width="240"
            Height="48"
            Margin="10,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#002F6C"
            Click="cert_Click"
            Content="Добавление сертификации"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="14"
            Foreground="#FFFFFF" />
    </Grid>
</Window>
