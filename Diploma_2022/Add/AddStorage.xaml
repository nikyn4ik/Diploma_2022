<Window
    x:Class="Diploma_2022.Add.AddStorage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Diploma_2022.Add"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Severstal Infocom"
    Icon="/Images\icon.ico"
    Width="750"
    Height="470"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Background>

        <ImageBrush ImageSource="/Images/add.jpg" />

    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="317*"/>
            <ColumnDefinition Width="106*"/>
            <ColumnDefinition Width="305*"/>
            <ColumnDefinition Width="11*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="69*"/>
            <RowDefinition Height="68*"/>
            <RowDefinition Height="68*"/>
            <RowDefinition Height="68*"/>
            <RowDefinition Height="68*"/>
            <RowDefinition Height="68*"/>
            <RowDefinition Height="65*"/>
        </Grid.RowDefinitions>
        <Label
            Height="56"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="#FFFFFF"
            Content="Создание склада"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="35"
            Foreground="#002F6C" Grid.ColumnSpan="5" />
        <Label
            Width="317"
            Height="57"
            Margin="0,8,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="#002F6C"
            Content="Название"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="20"
            Foreground="White" Grid.Row="1" Grid.Column="1" />
        <Label
            Width="317"
            Height="57"
            Margin="0,8,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="#002F6C"
            Content="Адрес"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="20"
            Foreground="White" Grid.Row="2" Grid.Column="1" />
        <Label
            Width="317"
            Height="57"
            Margin="0,9,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="#002F6C"
            Content="Телефон"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="20"
            Foreground="White" Grid.Row="3" Grid.RowSpan="2" Grid.Column="1" />
        <Label
            Width="317"
            Height="57"
            Margin="0,7,0,0"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="#002F6C"
            Content="Дата создания"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="20"
            Foreground="White" Grid.Row="4" HorizontalAlignment="Center" Grid.Column="1" />
        <Label
            Width="317"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="#002F6C"
            Content="ФИО ответственного"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="20"
            Foreground="White" Grid.Row="5" Height="57" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1" />

        <TextBox
            x:Name="namesclad"
            Margin="0,18,1,16"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="18"
            Foreground="Black"
            BorderBrush="Black"
            Background="#F4F4F4"
            TextAlignment="Left" Grid.Row="1" Grid.Column="3" Height="31" />
        <TextBox
            x:Name="addresssklad"
            Margin="0,18,1,16"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="18"
            Foreground="Black"
            Background="#F4F4F4"
            BorderBrush="Black"
            TextAlignment="Left" Grid.Row="2" Grid.Column="3" Height="31" />
        <TextBox
            x:Name="phonesklad"
            Width="305"
            Margin="0,17,0,18"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="18"
            Foreground="Black"
            Background="#F4F4F4"
            BorderBrush="Black"
            TextAlignment="Left" Grid.Row="3" HorizontalAlignment="Right" Grid.Column="3" Height="31" />

        <TextBox
            x:Name="FIO_responsible"
            Width="305"
            Margin="0,16,0,18"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="18"
            Foreground="Black"
            BorderBrush="Black"
            Background="#F4F4F4"
            TextAlignment="Left" Grid.Row="5" HorizontalAlignment="Right" Grid.Column="3" Height="31" />
        <TextBox
            x:Name="dataaddsklad"
            Width="304"
            Margin="0,19,1,15"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="18"
            Text="{Binding ElementName=DatePicker, Path=DisplayDate, StringFormat=d}"
            Foreground="Black"
            Background="#F4F4F4"
            BorderBrush="Black"
            TextAlignment="Left" TextChanged="dataaddsklad_TextChanged" Grid.Row="4" HorizontalAlignment="Right" Grid.Column="3" Height="31" />

        <Button
            Width="282"
            HorizontalAlignment="Center"
            Background="#FF0000"
            BorderThickness="0,0,0,0"
            Click="Button_add"
            Content="Сохранить"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="20"
            Foreground="#FFFFFF" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3" Margin="0,2,0,3" Height="54" />
        <DatePicker 
            x:Name="DatePicker"
            Grid.Row="4"
            Margin="274,18,0,13"
            FirstDayOfWeek="Monday"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="14" HorizontalAlignment="Left" Width="32" Grid.Column="3" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
