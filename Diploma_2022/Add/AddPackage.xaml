<Window
    x:Class="Diploma_2022.Add.AddPackage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Diploma_2022.Add"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    Title="Severstal Infocom"
    Width="550"
    Height="370"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Background>

        <ImageBrush ImageSource="/Images/add.jpg" />

    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*" />
            <ColumnDefinition Width="218*" />
            <ColumnDefinition Width="85*" />
            <ColumnDefinition Width="236*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="55*" />
            <RowDefinition Height="55*" />
            <RowDefinition Height="55*" />
            <RowDefinition Height="55*" />
            <RowDefinition Height="55*" />
            <RowDefinition Height="55*" />
        </Grid.RowDefinitions>
        <TextBox
            x:Name="id_model"
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="3"
            Margin="0,59,18,0"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="18"
            Foreground="#FF0000"
            TextWrapping="Wrap" Height="40" VerticalAlignment="Top" />
        <TextBox
            x:Name="color_package"
            Grid.Row="2"
            Grid.RowSpan="2"
            Grid.Column="3"
            Height="40"
            Margin="0,59,18,0"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="18"
            Foreground="#FF0000"
            TextWrapping="Wrap" VerticalAlignment="Top" />
        <TextBox
            x:Name="date_package"
            Grid.Row="3"
            Grid.RowSpan="2"
            Grid.Column="3"
            Margin="0,59,32,0"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="18"
            Foreground="#FF0000"
            Text="{Binding ElementName=DatePicker, Path=SelectedDate, StringFormat=d}"
            TextChanged="date_package_TextChanged"
            TextWrapping="Wrap" Height="40" VerticalAlignment="Top" />
        <Label
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="1"
            Height="40"
            Margin="0,59,0,0"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="#002F6C"
            Content="Модель"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="14"
            Foreground="#FFFFFF" VerticalAlignment="Top" />
        <Label
            Grid.RowSpan="2"
            Grid.ColumnSpan="2"
            Width="218"
            Height="40"
            Margin="10,59,1,0"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="#002F6C"
            Content="Id заказа"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="14"
            Foreground="#FFFFFF" VerticalAlignment="Top" />
        <Label
            Grid.Column="1"
            Width="218"
            Margin="0,66,0,5"
            HorizontalAlignment="Center"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="#002F6C"
            Content="ID заказа"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="14"
            Foreground="#FFFFFF" />
        <Label
            Grid.Row="3"
            Grid.Column="1"
            Height="40"
            Margin="0,1,0,0"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="#002F6C"
            Content="Цвет"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="14"
            Foreground="#FFFFFF" VerticalAlignment="Top" />
        <Label
            Grid.Row="3"
            Grid.RowSpan="2"
            Grid.ColumnSpan="2"
            Height="40"
            Margin="10,59,1,0"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="#002F6C"
            Content="Дата упаковки"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="14"
            Foreground="#FFFFFF" VerticalAlignment="Top" />
        <Label
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Height="36"
            Margin="0,0,10,0"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="#FFFFFF"
            Content="Редактирование заказа в упаковке"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="22"
            Foreground="#002F6C" />
        <DatePicker
            x:Name="DatePicker"
            Grid.Row="3"
            Grid.Column="3"
            Margin="200,59,0,0"
            DisplayDate="2022-04-04"
            FirstDayOfWeek="Monday"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="14" Height="39" VerticalAlignment="Top" HorizontalAlignment="Left" Width="32" Grid.RowSpan="2" />
        <ComboBox
            x:Name="id_ord"
            Grid.Row="1"
            Grid.Column="3"
            Height="40"
            Margin="0,1,18,0"
            DataContextChanged="id_ord_DataContextChanged"
            RenderTransformOrigin="0.5,0.5"
            SelectionChanged="ComboBox_SelectionChanged" VerticalAlignment="Top">
            <ComboBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform AngleY="0.47" />
                    <RotateTransform />
                    <TranslateTransform Y="0.492" />
                </TransformGroup>
            </ComboBox.RenderTransform>
        </ComboBox>
        <Button
            Grid.Row="4"
            Grid.RowSpan="2"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Margin="163,59,176,0"
            Background="#FF0000"
            BorderThickness="0,0,0,0"
            Click="Button_add"
            Content="Сохранить"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="14"
            Foreground="#FFFFFF" />
    </Grid>
</Window>
