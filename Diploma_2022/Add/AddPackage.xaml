<Window x:Class="Diploma_2022.Add.AddPackage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:Diploma_2022.Add"
        Title="Severstal Infocom"
    Width="550"
    Height="270"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Background>

        <ImageBrush ImageSource="/Images/add.jpg" />

    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="218*"/>
            <ColumnDefinition Width="85*"/>
            <ColumnDefinition Width="236*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="84*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="49*"/>
        </Grid.RowDefinitions>
        <TextBox
            x:Name="id_model"
            Width="204"
            Height="30"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="18"
            Foreground="#FF0000"
            TextWrapping="Wrap" Grid.Column="3" Margin="0,84,0,0" Grid.RowSpan="2" />
        <TextBox
            x:Name="color_package"
            Width="204"
            Height="30"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="18"
            Foreground="#FF0000"
            TextWrapping="Wrap" Grid.Column="3" Margin="0,37,0,0" Grid.RowSpan="2" Grid.Row="1" />
        <TextBox
            x:Name="date_package"
            Width="204"
            Height="30"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="18"
            Foreground="#FF0000"
            Text="{Binding ElementName=DatePicker, Path=SelectedDate, StringFormat=d}"
            TextWrapping="Wrap" Grid.Column="3" Margin="0,38,0,0" Grid.Row="2" TextChanged="date_package_TextChanged" Grid.RowSpan="2" />
        <Label
            Width="218"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="#002F6C"
            Content="Модель"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="14"
            Foreground="#FFFFFF" Height="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="1" Margin="0,84,0,0" Grid.RowSpan="2" />
        <Label
            Width="218"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="#002F6C"
            Content="Цвет"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="14"
            Foreground="#FFFFFF" Height="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="1" Margin="0,39,0,0" Grid.RowSpan="2" Grid.Column="1" />
        <Label
            Width="218"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="#002F6C"
            Content="Дата упаковки"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="14"
            Foreground="#FFFFFF" Height="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="1" Grid.Row="2" Margin="0,38,0,0" Grid.RowSpan="2" />
        <Label
            VerticalAlignment="Top"
            Background="#FFFFFF"
            Content="Добавление свойств упаковки"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="22"
            Foreground="#002F6C" Height="36" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="1" Grid.ColumnSpan="3" Margin="0,0,10,0" />
        <DatePicker
            x:Name="DatePicker"
            Grid.Column="3"
            DisplayDate="2022-03-23"
            FirstDayOfWeek="Monday"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="14" Grid.Row="2" Margin="201,38,0,9" Grid.RowSpan="2" />
        <Button
                Background="#FF0000"
                BorderThickness="0,0,0,0"
                Click="Button_add"
                Content="Загрузить в таблицу"
                FontFamily="Microsoft JhengHei UI Light"
                FontSize="14"
                Foreground="#FFFFFF" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" Margin="163,1,176,0" />
    </Grid>
</Window>
