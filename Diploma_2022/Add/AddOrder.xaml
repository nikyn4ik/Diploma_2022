<Window
    x:Class="Diploma_2022.Add.AddOrder"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Diploma_2022.Add"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Severstal Infocom"
    Width="550"
    Height="270"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Background>

        <ImageBrush ImageSource="/Images/add.jpg" />

    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*" />
            <ColumnDefinition Width="232*" />
            <ColumnDefinition Width="67*" />
            <ColumnDefinition Width="240*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="84*" />
            <RowDefinition Height="39*" />
            <RowDefinition Height="38*" />
            <RowDefinition Height="48*" />
            <RowDefinition Height="45*" />
        </Grid.RowDefinitions>
        <TextBox
            x:Name="consignee"
            Grid.RowSpan="2"
            Grid.Column="3"
            Width="222"
            Margin="0,84,0,0"
            HorizontalAlignment="Left"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="18"
            Foreground="#FF0000"
            TextWrapping="Wrap" Height="34" VerticalAlignment="Top" />
        <ComboBox
            x:Name="qua"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="14"
            Grid.Row="1"
            Grid.Column="3"
            Height="37"
            Margin="0,0,18,3"
            RenderTransformOrigin="0.5,0.5"
            SelectionChanged="ComboBox_SelectionChanged" VerticalAlignment="Bottom" Grid.RowSpan="2"/>
        <Label
            Grid.RowSpan="2"
            Grid.Column="1"
            Width="232"
            Margin="0,84,0,0"
            HorizontalAlignment="Left"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="#002F6C"
            Content="Грузополучатель"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="14"
            Foreground="#FFFFFF" Height="35" VerticalAlignment="Top" />
        <Label
            Grid.RowSpan="2"
            Grid.Column="1"
            Width="234"
            Margin="0,0,0,3"
            HorizontalAlignment="Center"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="#002F6C"
            Content="Пройдена проверка на качество?"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="14"
            Foreground="#FFFFFF" Grid.Row="1" Height="35" VerticalAlignment="Bottom" />
        <Label
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Height="36"
            Margin="0,0,10,0"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="#FFFFFF"
            Content="Добавление грузополучателя"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="22"
            Foreground="#002F6C" />
        <Button
            Grid.Row="3"
            Grid.RowSpan="2"
            Grid.Column="1"
            Grid.ColumnSpan="3"
            Margin="165,48,174,0"
            Background="#FF0000"
            BorderThickness="0,0,0,0"
            Click="Button_add"
            Content="Загрузить в таблицу"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="14"
            Foreground="#FFFFFF" />
    </Grid>
</Window>
