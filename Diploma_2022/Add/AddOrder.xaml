<Window
    x:Class="Diploma_2022.Add.AddOrder"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Diploma_2022.Add"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Severstal Infocom"
    Width="360"
    Height="200"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Background>

        <ImageBrush ImageSource="\Images\Sevrstal554840.jpg" />

    </Window.Background>
    <Grid>
        <TextBox
            x:Name="consignee"
            Width="120"
            Height="22"
            Margin="230,35,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="14"
            Foreground="#FF0000"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="date_of_entrance"
            Width="120"
            Height="22"
            Margin="230,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="14"
            Foreground="#FF0000"
            TextWrapping="Wrap" />
        <Label
            Margin="10,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Background="#002F6C"
            Content="Дата поступления"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="14"
            Foreground="#FFFFFF" />
        <Label
            Width="128"
            Margin="10,32,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#002F6C"
            Content="Грузополучатель"
            FontFamily="Microsoft JhengHei UI Light"
            FontSize="14"
            Foreground="#FFFFFF" />
        <Border>
            <Button
                Width="175"
                Height="29"
                Margin="0,145,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="#FF0000"
                BorderThickness="0,0,0,0"
                Click="Button_add"
                Content="Загрузить в таблицу"
                FontFamily="Microsoft JhengHei UI Light"
                FontSize="14"
                Foreground="#FFFFFF" />
        </Border>
    </Grid>
</Window>
